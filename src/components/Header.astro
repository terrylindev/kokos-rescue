---
import Nav from "./Nav.astro";
import NavDonate from "./NavDonate.astro";
---

<header class="relative flex items-center border-b-2 border-gray-300 p-4">
  <div class="flex-1">
    <a href="/" class="text-3xl font-bold">
      <img src="/favicon.svg" alt="Koko's Rescue Logo" class="h-8" />
    </a>
  </div>

  <nav
    id="nav-menu"
    class="hidden md:flex flex-1 justify-center space-x-4 text-sm font-medium absolute md:static top-full left-0 w-full bg-white rounded-md shadow-lg md:bg-transparent md:shadow-none z-50 p-1"
  >
    <Nav />
  </nav>

  <div class="flex-1 flex justify-end items-center">
    <NavDonate />

    <button
      id="menu-toggle"
      class="ml-4 text-3xl md:hidden focus:outline-none"
      aria-label="Toggle Navigation"
    >
      &#9776; <!-- Hamburger icon -->
    </button>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuToggle = document.getElementById("menu-toggle");
    const navMenu = document.getElementById("nav-menu");

    if (menuToggle && navMenu) {
      menuToggle.addEventListener("click", function () {
        navMenu.classList.toggle("hidden");

        if (navMenu.classList.contains("hidden")) {
          menuToggle.innerHTML = "&#9776;"; // Hamburger icon
        } else {
          menuToggle.innerHTML = "&#10005;"; // Close icon (X)
        }
      });
    }
  });
</script>
