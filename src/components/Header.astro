---
import Nav from "./Nav.astro";
import NavDonate from "./NavDonate.astro";
---

<header
  id="main-header"
  class="header sticky top-0 z-50 flex items-center justify-between border-b border-olive-200 py-3 px-4 md:px-8 bg-beige-100/95 backdrop-blur-md transition-all duration-300"
>
  <div class="flex-shrink-0 w-40 md:w-48">
    <a href="/" class="logo-link flex items-center gap-2 group">
      <img src="/favicon.svg" alt="" class="h-9 transition-transform duration-300 group-hover:scale-110" aria-hidden="true" />
      <span class="hidden sm:block font-bold text-olive-800 text-lg">Koko's Rescue</span>
    </a>
  </div>

  <nav
    id="nav-menu"
    class="nav-menu fixed md:relative inset-0 md:inset-auto top-[61px] md:top-auto md:flex md:justify-center bg-beige-100 md:bg-transparent z-50 transition-all duration-300 -translate-x-full md:translate-x-0 opacity-0 md:opacity-100"
  >
    <Nav />
  </nav>

  <div class="flex items-center justify-end gap-3 w-40 md:w-48">
    <div class="hidden sm:block">
      <NavDonate />
    </div>

    <button
      id="menu-toggle"
      class="menu-toggle md:hidden flex flex-col items-center justify-center w-10 h-10 rounded-lg hover:bg-olive-100 focus:outline-none focus:ring-2 focus:ring-olive-400 transition-colors"
      aria-label="Toggle Navigation"
      aria-expanded="false"
    >
      <span class="hamburger-line hamburger-line-1"></span>
      <span class="hamburger-line hamburger-line-2"></span>
      <span class="hamburger-line hamburger-line-3"></span>
    </button>
  </div>
</header>

<!-- Mobile menu overlay -->
<div id="menu-overlay" class="menu-overlay fixed inset-0 bg-black/20 z-40 opacity-0 pointer-events-none transition-opacity duration-300 md:hidden"></div>

<style>
  .header {
    box-shadow: 0 1px 3px rgba(90, 107, 70, 0.08);
  }
  
  .header.scrolled {
    box-shadow: 0 4px 12px rgba(90, 107, 70, 0.12);
    padding-top: 0.5rem;
    padding-bottom: 0.5rem;
  }
  
  .hamburger-line {
    display: block;
    width: 22px;
    height: 2px;
    background-color: #5a6b46;
    border-radius: 2px;
    transition: all 0.3s ease;
  }
  
  .hamburger-line-1 { transform: translateY(-6px); }
  .hamburger-line-2 { opacity: 1; }
  .hamburger-line-3 { transform: translateY(6px); }
  
  .menu-toggle.active .hamburger-line-1 {
    transform: translateY(0) rotate(45deg);
  }
  
  .menu-toggle.active .hamburger-line-2 {
    opacity: 0;
  }
  
  .menu-toggle.active .hamburger-line-3 {
    transform: translateY(-2px) rotate(-45deg);
  }
  
  .nav-menu.open {
    transform: translateX(0);
    opacity: 1;
  }
  
  .menu-overlay.visible {
    opacity: 1;
    pointer-events: auto;
  }
  
  @media (max-width: 767px) {
    .nav-menu {
      padding: 1.5rem;
      height: calc(100vh - 61px);
      overflow-y: auto;
    }
  }
</style>

<script>
  function initHeader() {
    const header = document.getElementById("main-header");
    const menuToggle = document.getElementById("menu-toggle");
    const navMenu = document.getElementById("nav-menu");
    const menuOverlay = document.getElementById("menu-overlay");
    
    // Sticky header scroll effect
    let lastScroll = 0;
    window.addEventListener("scroll", () => {
      const currentScroll = window.scrollY;
      
      if (header) {
        if (currentScroll > 50) {
          header.classList.add("scrolled");
        } else {
          header.classList.remove("scrolled");
        }
      }
      
      lastScroll = currentScroll;
    }, { passive: true });
    
    // Mobile menu toggle
    function toggleMenu() {
      const isOpen = navMenu?.classList.contains("open");
      
      if (isOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    }
    
    function openMenu() {
      navMenu?.classList.add("open");
      menuToggle?.classList.add("active");
      menuToggle?.setAttribute("aria-expanded", "true");
      menuOverlay?.classList.add("visible");
      document.body.style.overflow = "hidden";
    }
    
    function closeMenu() {
      navMenu?.classList.remove("open");
      menuToggle?.classList.remove("active");
      menuToggle?.setAttribute("aria-expanded", "false");
      menuOverlay?.classList.remove("visible");
      document.body.style.overflow = "";
    }
    
    menuToggle?.addEventListener("click", toggleMenu);
    menuOverlay?.addEventListener("click", closeMenu);
    
    // Close menu on nav link click (mobile)
    navMenu?.querySelectorAll("a").forEach(link => {
      link.addEventListener("click", () => {
        if (window.innerWidth < 768) {
          closeMenu();
        }
      });
    });
    
    // Close menu on escape key
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && navMenu?.classList.contains("open")) {
        closeMenu();
      }
    });
    
    // Close menu on resize to desktop
    window.addEventListener("resize", () => {
      if (window.innerWidth >= 768) {
        closeMenu();
      }
    });
  }
  
  document.addEventListener("DOMContentLoaded", initHeader);
  document.addEventListener("astro:page-load", initHeader);
</script>
