---
interface Props {
  number: number;
  title: string;
  content: string;
}

const { number, title, content } = Astro.props;
---

<div
  class="bg-beige-100 bg-opacity-95 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300 transform hover:-translate-y-1"
>
  <div class="relative">
    <h1
      class="bg-color text-white text-2xl md:text-3xl text-center font-bold py-3"
    >
      {number}
    </h1>
    <div class="p-6">
      <h2 class="text-xl font-bold mb-3 text-gray-800">{title}</h2>
      <p class="text-gray-700">{content}</p>
    </div>
  </div>
</div>

<style>
  .bg-color {
    background-color: #5a6b46;
  }
</style>
