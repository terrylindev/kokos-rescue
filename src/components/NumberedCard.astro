---
interface Props {
  number: number;
  title: string;
  content: string;
}

const { number, title, content } = Astro.props;
---

<div
  class="bg-beige-100 bg-opacity-95 rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300 transform hover:-translate-y-1"
>
  <div class="relative">
    <h1
      class="bg-color text-white text-xl md:text-2xl text-center font-bold py-2 md:py-3"
    >
      {number}
    </h1>
    <div class="p-4 md:p-6">
      <h2 class="text-lg md:text-xl font-bold mb-2 md:mb-3 text-gray-800">{title}</h2>
      <p class="text-gray-700 text-sm md:text-base">{content}</p>
    </div>
  </div>
</div>

<style>
  .bg-color {
    background-color: #5a6b46;
  }
</style>
