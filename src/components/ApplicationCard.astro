---
import Button from "./Button.astro";

interface Props {
  title: string;
  formUrl: string;
}

const { title, formUrl } = Astro.props;
---

<section
  class="bg-beige-100 p-4 sm:p-8 md:p-16 border border-olive-200 rounded-lg"
>
  <div class="max-w-3xl mx-auto text-center">
    <h1
      class="text-2xl md:text-3xl lg:text-4xl font-bold text-olive-800 mb-4 md:mb-6"
    >
      {title} Application
    </h1>
    <p class="text-lg text-olive-700 mb-4">
      After reading our <span class="font-semibold"
        >{title} Requirements & Process</span
      >, click the button below to fill out the application or use the form
      embedded below.
    </p>
    <p class="text-md text-olive-600 mb-5">
      If you're having trouble viewing the form on your browser, please click
      the "Start Now" button
    </p>
    <Button label="Start Now" href={formUrl} variant="primary" blank={true} />
    <div class="relative h-[800px] w-full mt-5 mb-8">
      <iframe
        src={formUrl}
        class="absolute top-0 left-0 w-full h-full border-none rounded-md shadow-lg"
        allowfullscreen
      >
        Loadingâ€¦
      </iframe>
    </div>
  </div>
</section>
