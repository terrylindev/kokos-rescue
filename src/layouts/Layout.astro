---
import Head from "./Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface LayoutProps {
  title: string;
}

const { title } = Astro.props as LayoutProps;
---

<html lang="en">
  <Head title={title} />
  <body class="flex flex-col min-h-screen bg-beige-100 text-olive-900">
    <Header />
    <main class="flex-grow mx-auto py-8 px-4 md:px-8 w-full">
      <slot />
    </main>
    <Footer />
  </body>
</html>
