---
import { loadQuery } from "../sanity/lib/load-query";
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import OurText from "../components/OurText.astro";

interface AboutData {
  content: string;
}

// Default content fallback
let content = "Koko's Rescue is dedicated to saving and rehoming cats in need throughout New York City.";

// Fetch about page data from Sanity
try {
  const { data: aboutData } = await loadQuery<AboutData>({
    query: `*[_type == "about"][0]{content}`,
  });
  
  if (aboutData?.content) {
    content = aboutData.content;
  }
} catch (error) {
  console.error("Failed to load about page data:", error);
}

// Split content into paragraphs
const paragraphs = content.split("\n");
---

<Layout title="About Us" description="Learn about Koko's Rescue, our mission to save and rehome cats in NYC, and how we help cats find their forever homes.">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-beige-100 to-beige-200 py-16 paw-pattern-bg">
    <div class="max-w-7xl mx-auto px-4 md:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4 text-gray-800">
        About Us
      </h1>
      <p class="text-xl max-w-3xl mx-auto mb-8 text-gray-700 italic">
        "Every cat deserves a loving home."
      </p>
      <div class="flex justify-center">
        <Button
          label="Save A Life Today!"
          href="/donate"
          variant="primary"
          size="large"
        />
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 md:px-8 py-12">
    <!-- Main Content Section - Mission -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 inline-block relative">
          Our Mission
          <span
            class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-olive-300 to-olive-100"
          ></span>
        </h2>
      </div>

      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="flex flex-col lg:flex-row">
          <!-- Mission Image and Quote -->
          <div class="lg:w-2/5 relative">
            <div
              class="h-full bg-gradient-to-br from-olive-100 to-olive-200 p-8 flex items-center justify-center"
            >
              <div class="relative z-10 text-center">
                <div class="mx-auto w-48 h-48 mb-6 overflow-hidden">
                  <img
                    src="/images/adopt-cat.svg"
                    alt="Cat illustration"
                    class="w-full h-full object-contain"
                  />
                </div>
                <blockquote class="italic text-gray-700 font-medium text-lg">
                  "Rescuing a cat may not change the world, but for that one
                  cat, the world changes forever."
                </blockquote>
              </div>
              <div class="absolute inset-0 opacity-10 pattern-paw"></div>
            </div>
          </div>

          <!-- Mission Content -->
          <div class="lg:w-3/5 p-8 lg:p-12">
            <div class="prose prose-lg max-w-none text-gray-700 space-y-4">
              {
                paragraphs.map((paragraph) => (
                  <p class="leading-relaxed">{paragraph}</p>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 inline-block relative">
          Our Core Values
          <span
            class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-olive-300 to-olive-100"
          ></span>
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div
          class="bg-white p-8 rounded-xl shadow-md flex flex-col items-center text-center transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
        >
          <div class="bg-olive-100 p-5 rounded-full mb-6 shadow-inner">
            <img
              src="/images/icons8-cat-64.webp"
              alt="Compassion"
              class="w-12 h-12"
            />
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800">Compassion</h3>
          <p class="text-gray-600">
            Every cat in our care receives love, respect, and dignity.
          </p>
        </div>

        <div
          class="bg-white p-8 rounded-xl shadow-md flex flex-col items-center text-center transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
        >
          <div class="bg-olive-100 p-5 rounded-full mb-6 shadow-inner">
            <img
              src="/images/icons8-requirement.webp"
              alt="Education"
              class="w-12 h-12"
            />
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800">Education</h3>
          <p class="text-gray-600">
            We believe in teaching proper cat care and responsible pet
            ownership.
          </p>
        </div>

        <div
          class="bg-white p-8 rounded-xl shadow-md flex flex-col items-center text-center transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
        >
          <div class="bg-olive-100 p-5 rounded-full mb-6 shadow-inner">
            <img
              src="/images/icons8-vaccine.webp"
              alt="Health"
              class="w-12 h-12"
            />
          </div>
          <h3 class="text-xl font-semibold mb-3 text-gray-800">Health</h3>
          <p class="text-gray-600">
            All cats receive proper veterinary care, vaccinations, and
            treatment.
          </p>
        </div>
      </div>
    </section>

    <!-- How We Help Section -->
    <section class="mb-16">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 inline-block relative">
          How We Help
          <span
            class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-olive-100 to-olive-200"
          ></span>
        </h2>
      </div>

      <div
        class="bg-white rounded-2xl shadow-lg p-8 md:p-12 relative overflow-hidden"
      >
        <div class="absolute inset-0 opacity-5 pattern-paw"></div>
        <div class="relative z-10">
          <!-- Timeline Line -->
          <div
            class="hidden md:block absolute left-1/2 h-full w-1 bg-gradient-to-b from-olive-300 via-olive-400 to-olive-300 transform -translate-x-1/2 rounded-full"
          >
          </div>

          <!-- Timeline Items -->
          <div class="space-y-16 md:space-y-24 relative">
            <!-- Item 1 -->
            <div class="flex flex-col md:flex-row items-center">
              <div class="md:w-1/2 md:pr-16 mb-6 md:mb-0 md:text-right">
                <div class="bg-beige-50 rounded-xl shadow-md p-6 inline-block">
                  <h3 class="text-2xl font-semibold mb-3 text-olive-700">
                    Rescue
                  </h3>
                  <p class="text-gray-600">
                    We rescue cats from various challenging situations, giving
                    them a second chance at life.
                  </p>
                </div>
              </div>
              <div
                class="md:w-12 md:h-12 bg-olive-500 border-4 border-white rounded-full z-10 my-2 md:my-0 shadow-lg flex items-center justify-center"
              >
                <span class="text-white font-bold">1</span>
              </div>
              <div class="md:w-1/2 md:pl-16">
                <img
                  src="/images/cat-family-bro.svg"
                  alt="Rescue"
                  class="w-32 h-32 mx-auto opacity-80"
                />
              </div>
            </div>

            <!-- Item 2 -->
            <div class="flex flex-col md:flex-row items-center">
              <div
                class="md:w-1/2 md:pr-16 mb-6 md:mb-0 md:text-right order-1 md:order-1"
              >
                <img
                  src="/images/fish-bowl.svg"
                  alt="Rehabilitate"
                  class="w-32 h-32 mx-auto opacity-80"
                />
              </div>
              <div
                class="md:w-12 md:h-12 bg-olive-500 border-4 border-white rounded-full z-10 my-2 md:my-0 order-2 md:order-2 shadow-lg flex items-center justify-center"
              >
                <span class="text-white font-bold">2</span>
              </div>
              <div class="md:w-1/2 md:pl-16 order-3 md:order-3">
                <div class="bg-beige-50 rounded-xl shadow-md p-6 inline-block">
                  <h3 class="text-2xl font-semibold mb-3 text-olive-700">
                    Rehabilitate
                  </h3>
                  <p class="text-gray-600">
                    We provide medical care, socialization, and a safe
                    environment for cats to heal and grow.
                  </p>
                </div>
              </div>
            </div>

            <!-- Item 3 -->
            <div class="flex flex-col md:flex-row items-center">
              <div class="md:w-1/2 md:pr-16 mb-6 md:mb-0 md:text-right">
                <div class="bg-beige-50 rounded-xl shadow-md p-6 inline-block">
                  <h3 class="text-2xl font-semibold mb-3 text-olive-700">
                    Rehome
                  </h3>
                  <p class="text-gray-600">
                    We carefully match cats with loving families where they'll
                    thrive for the rest of their lives.
                  </p>
                </div>
              </div>
              <div
                class="md:w-12 md:h-12 bg-olive-500 border-4 border-white rounded-full z-10 my-2 md:my-0 shadow-lg flex items-center justify-center"
              >
                <span class="text-white font-bold">3</span>
              </div>
              <div class="md:w-1/2 md:pl-16">
                <img
                  src="/images/cat_vase.svg"
                  alt="Rehome"
                  class="w-32 h-32 mx-auto opacity-80"
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section
      class="bg-gradient-to-r from-olive-100 to-olive-200 rounded-xl p-10 text-center relative overflow-hidden"
    >
      <div class="absolute inset-0 opacity-10 pattern-paw"></div>
      <div class="relative z-10">
        <h2 class="text-3xl font-bold mb-6 text-gray-800">
          Want to Make a Difference?
        </h2>
        <p class="mb-8 text-lg text-gray-700 max-w-2xl mx-auto">
          Join our mission to rescue and rehome cats in need. Every donation,
          adoption, and foster home makes a real impact in a cat's life.
        </p>
        <div class="flex flex-wrap justify-center gap-6">
          <Button
            label="Adopt a Cat"
            href="/adopt"
            variant="primary"
            size="medium"
          />
          <Button
            label="Become a Foster"
            href="/foster"
            variant="primary"
            size="medium"
          />
          <Button
            label="Donate Now"
            href="/donate"
            variant="primary"
            size="medium"
          />
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  section {
    animation: fadeInUp 0.8s ease-out;
  }

  /* Additional heading styles */
  h2.text-3xl {
    font-weight: 800;
    letter-spacing: -0.5px;
  }

  /* Enhanced animation for cards */
  .grid > div {
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
</style>
