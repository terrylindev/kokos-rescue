---
import { loadQuery } from "../sanity/lib/load-query";
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import OurText from "../components/OurText.astro";

interface AboutData {
  content: string;
}

// Default content fallback
let content = "Koko's Rescue is dedicated to saving and rehoming cats in need throughout New York City.";

// Fetch about page data from Sanity
try {
  const { data: aboutData } = await loadQuery<AboutData>({
    query: `*[_type == "about"][0]{content}`,
  });
  
  if (aboutData?.content) {
    content = aboutData.content;
  }
} catch (error) {
  console.error("Failed to load about page data:", error);
}

// Split content into paragraphs
const paragraphs = content.split("\n");
---

<Layout title="About Us" description="Learn about Koko's Rescue, our mission to save and rehome cats in NYC, and how we help cats find their forever homes.">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-beige-100 to-beige-200 py-8 md:py-12 paw-pattern-bg">
    <div class="max-w-7xl mx-auto px-4 md:px-8 text-center">
      <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-2 md:mb-4 text-gray-800">
        About Us
      </h1>
      <p class="text-base md:text-lg lg:text-xl max-w-3xl mx-auto mb-4 md:mb-6 text-gray-700 italic">
        "Every cat deserves a loving home."
      </p>
      <div class="flex justify-center">
        <Button
          label="Save A Life Today!"
          href="/donate"
          variant="primary"
          size="large"
        />
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 md:px-8 py-8 md:py-12">
    <!-- Main Content Section - Mission -->
    <section class="mb-10 md:mb-16">
      <div class="text-center mb-6 md:mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-800 inline-block relative">
          Our Mission
          <span
            class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-olive-300 to-olive-100"
          ></span>
        </h2>
      </div>

      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="flex flex-col lg:flex-row">
          <!-- Mission Image and Quote -->
          <div class="lg:w-2/5 relative">
            <div
              class="h-full bg-gradient-to-br from-olive-100 to-olive-200 p-5 md:p-6 flex items-center justify-center"
            >
              <div class="relative z-10 text-center">
                <div class="mx-auto w-28 h-28 md:w-40 md:h-40 mb-3 md:mb-5 overflow-hidden">
                  <img
                    src="/images/adopt-cat.svg"
                    alt="Cat illustration"
                    class="w-full h-full object-contain"
                  />
                </div>
                <blockquote class="italic text-gray-700 font-medium text-sm md:text-base lg:text-lg max-w-xs mx-auto">
                  "Rescuing a cat may not change the world, but for that one
                  cat, the world changes forever."
                </blockquote>
              </div>
            </div>
          </div>

          <!-- Mission Content -->
          <div class="lg:w-3/5 p-5 md:p-6 lg:p-10">
            <div class="prose prose-sm md:prose-base lg:prose-lg max-w-none text-gray-700 space-y-3 md:space-y-4">
              {
                paragraphs.map((paragraph) => (
                  <p class="leading-relaxed text-sm md:text-base">{paragraph}</p>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="mb-10 md:mb-16">
      <div class="text-center mb-6 md:mb-10">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-800 inline-block relative">
          Our Core Values
          <span
            class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-olive-300 to-olive-100"
          ></span>
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 md:gap-8">
        <div
          class="bg-white p-5 md:p-6 rounded-xl shadow-md flex flex-col items-center text-center transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
        >
          <div class="bg-olive-100 p-3 md:p-4 rounded-full mb-4 md:mb-5 shadow-inner">
            <img
              src="/images/icons8-cat-64.webp"
              alt="Compassion"
              class="w-10 h-10 md:w-12 md:h-12"
            />
          </div>
          <h3 class="text-lg md:text-xl font-semibold mb-2 text-gray-800">Compassion</h3>
          <p class="text-gray-600 text-sm md:text-base">
            Every cat in our care receives love, respect, and dignity.
          </p>
        </div>

        <div
          class="bg-white p-5 md:p-6 rounded-xl shadow-md flex flex-col items-center text-center transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
        >
          <div class="bg-olive-100 p-3 md:p-4 rounded-full mb-4 md:mb-5 shadow-inner">
            <img
              src="/images/icons8-requirement.webp"
              alt="Education"
              class="w-10 h-10 md:w-12 md:h-12"
            />
          </div>
          <h3 class="text-lg md:text-xl font-semibold mb-2 text-gray-800">Education</h3>
          <p class="text-gray-600 text-sm md:text-base">
            We believe in teaching proper cat care and responsible pet
            ownership.
          </p>
        </div>

        <div
          class="bg-white p-5 md:p-6 rounded-xl shadow-md flex flex-col items-center text-center transform transition-all duration-300 hover:shadow-xl hover:-translate-y-1"
        >
          <div class="bg-olive-100 p-3 md:p-4 rounded-full mb-4 md:mb-5 shadow-inner">
            <img
              src="/images/icons8-vaccine.webp"
              alt="Health"
              class="w-10 h-10 md:w-12 md:h-12"
            />
          </div>
          <h3 class="text-lg md:text-xl font-semibold mb-2 text-gray-800">Health</h3>
          <p class="text-gray-600 text-sm md:text-base">
            All cats receive proper veterinary care, vaccinations, and
            treatment.
          </p>
        </div>
      </div>
    </section>

    <!-- How We Help Section -->
    <section class="mb-10 md:mb-16">
      <div class="text-center mb-6 md:mb-10">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-800 inline-block relative">
          How We Help
          <span
            class="absolute bottom-0 left-0 w-full h-1 bg-gradient-to-r from-olive-100 to-olive-200"
          ></span>
        </h2>
      </div>

      <!-- Mobile: Simple card layout -->
      <div class="md:hidden bg-white rounded-2xl shadow-lg p-5">
        <div class="space-y-4">
          <div class="bg-beige-50 rounded-xl p-4">
            <div class="flex items-center gap-3 mb-2">
              <span class="w-8 h-8 bg-olive-500 rounded-full flex items-center justify-center text-white font-bold text-sm flex-shrink-0">1</span>
              <h3 class="text-lg font-semibold text-olive-700">Rescue</h3>
            </div>
            <p class="text-gray-600 text-sm pl-11">
              We rescue cats from various challenging situations, giving them a second chance at life.
            </p>
          </div>
          
          <div class="bg-beige-50 rounded-xl p-4">
            <div class="flex items-center gap-3 mb-2">
              <span class="w-8 h-8 bg-olive-500 rounded-full flex items-center justify-center text-white font-bold text-sm flex-shrink-0">2</span>
              <h3 class="text-lg font-semibold text-olive-700">Rehabilitate</h3>
            </div>
            <p class="text-gray-600 text-sm pl-11">
              We provide medical care, socialization, and a safe environment for cats to heal and grow.
            </p>
          </div>
          
          <div class="bg-beige-50 rounded-xl p-4">
            <div class="flex items-center gap-3 mb-2">
              <span class="w-8 h-8 bg-olive-500 rounded-full flex items-center justify-center text-white font-bold text-sm flex-shrink-0">3</span>
              <h3 class="text-lg font-semibold text-olive-700">Rehome</h3>
            </div>
            <p class="text-gray-600 text-sm pl-11">
              We carefully match cats with loving families where they'll thrive for the rest of their lives.
            </p>
          </div>
        </div>
      </div>

      <!-- Desktop: Timeline layout -->
      <div class="hidden md:block bg-white rounded-2xl shadow-lg p-10 relative overflow-hidden">
        <div class="relative z-10">
          <!-- Timeline Line -->
          <div class="absolute left-1/2 h-full w-1 bg-gradient-to-b from-olive-300 via-olive-400 to-olive-300 transform -translate-x-1/2 rounded-full"></div>

          <!-- Timeline Items -->
          <div class="space-y-12 relative">
            <!-- Item 1 -->
            <div class="flex items-center">
              <div class="w-1/2 pr-12 text-right">
                <div class="bg-beige-50 rounded-xl shadow-md p-5 inline-block">
                  <h3 class="text-2xl font-semibold mb-2 text-olive-700">Rescue</h3>
                  <p class="text-gray-600">
                    We rescue cats from various challenging situations, giving them a second chance at life.
                  </p>
                </div>
              </div>
              <div class="w-12 h-12 bg-olive-500 border-4 border-white rounded-full z-10 shadow-lg flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">1</span>
              </div>
              <div class="w-1/2 pl-12">
                <img src="/images/cat-family-bro.svg" alt="Rescue" class="w-24 h-24 mx-auto opacity-70" />
              </div>
            </div>

            <!-- Item 2 -->
            <div class="flex items-center">
              <div class="w-1/2 pr-12 text-right">
                <img src="/images/fish-bowl.svg" alt="Rehabilitate" class="w-24 h-24 mx-auto opacity-70" />
              </div>
              <div class="w-12 h-12 bg-olive-500 border-4 border-white rounded-full z-10 shadow-lg flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">2</span>
              </div>
              <div class="w-1/2 pl-12">
                <div class="bg-beige-50 rounded-xl shadow-md p-5 inline-block">
                  <h3 class="text-2xl font-semibold mb-2 text-olive-700">Rehabilitate</h3>
                  <p class="text-gray-600">
                    We provide medical care, socialization, and a safe environment for cats to heal and grow.
                  </p>
                </div>
              </div>
            </div>

            <!-- Item 3 -->
            <div class="flex items-center">
              <div class="w-1/2 pr-12 text-right">
                <div class="bg-beige-50 rounded-xl shadow-md p-5 inline-block">
                  <h3 class="text-2xl font-semibold mb-2 text-olive-700">Rehome</h3>
                  <p class="text-gray-600">
                    We carefully match cats with loving families where they'll thrive for the rest of their lives.
                  </p>
                </div>
              </div>
              <div class="w-12 h-12 bg-olive-500 border-4 border-white rounded-full z-10 shadow-lg flex items-center justify-center flex-shrink-0">
                <span class="text-white font-bold">3</span>
              </div>
              <div class="w-1/2 pl-12">
                <img src="/images/cat_vase.svg" alt="Rehome" class="w-24 h-24 mx-auto opacity-70" />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section
      class="bg-gradient-to-r from-olive-100 to-olive-200 rounded-xl p-5 md:p-8 text-center relative overflow-hidden"
    >
      <div class="relative z-10">
        <h2 class="text-2xl md:text-3xl font-bold mb-3 md:mb-5 text-gray-800">
          Want to Make a Difference?
        </h2>
        <p class="mb-5 md:mb-6 text-sm md:text-base lg:text-lg text-gray-700 max-w-2xl mx-auto">
          Join our mission to rescue and rehome cats in need. Every donation,
          adoption, and foster home makes a real impact in a cat's life.
        </p>
        <div class="flex flex-wrap justify-center gap-3 md:gap-4">
          <Button
            label="Adopt a Cat"
            href="/adopt"
            variant="primary"
            size="medium"
          />
          <Button
            label="Become a Foster"
            href="/foster"
            variant="primary"
            size="medium"
          />
          <Button
            label="Donate Now"
            href="/donate"
            variant="primary"
            size="medium"
          />
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  section {
    animation: fadeInUp 0.8s ease-out;
  }

  /* Additional heading styles */
  h2.text-3xl {
    font-weight: 800;
    letter-spacing: -0.5px;
  }

  /* Enhanced animation for cards */
  .grid > div {
    transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  }
</style>
